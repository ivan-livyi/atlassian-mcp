{
  "mcpServers": {
    "atlassian": {
      "command": "docker",
      "args": [
        "exec", 
        "-i",
        "-e", "ATLASSIAN_EMAIL",
        "-e", "ATLASSIAN_TOKEN", 
        "-e", "ATLASSIAN_DOMAIN",
        "atlassian-mcp-server", 
        "python", 
        "atlassian_mcp.py"
      ],
      "env": {
        "ATLASSIAN_EMAIL": "your.email@company.com",
        "ATLASSIAN_TOKEN": "your_api_token_here",
        "ATLASSIAN_DOMAIN": "your-company"
      }
    }
  }
} 